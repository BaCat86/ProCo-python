#:import get_color_from_hex kivy.utils.get_color_from_hex

<Label>:
    color: 0, 0, 0, 1
    text_size: self.size
    valign: 'center'

<BoxLayout>:
    background_color: get_color_from_hex('#f0f0f0')
    canvas.before:
        Color:
            rgba: self.background_color
        Rectangle:
            pos: self.pos
            size: self.size
