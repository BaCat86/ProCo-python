<LoginScreen>:
    orientation: 'vertical'
    padding: 50
    spacing: 20

    Label:
        text: 'Форма входа'
        font_size: 32
        bold: True
        size_hint_y: None
        height: 20

    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        size_hint_y: None
        height: 150

        TextInput:
            id: username
            hint_text: 'Логин'
            size_hint_y: None
            height: 40
            multiline: False

        TextInput:
            id: password
            hint_text: 'Пароль'
            password: True
            size_hint_y: None
            height: 40
            multiline: False

    BoxLayout:
        spacing: 10
        size_hint_y: None
        height: 40

        Button:
            text: 'Войти'
            on_press: root.validate_login()
            background_color: 0, 0.7, 0, 1

        Button:
            text: 'Регистрация'
            background_color: 0.2, 0.5, 1, 1
